                <RowDefinition Height="15*" />
                <RowDefinition Height="15*" />
                <!--
                <RowDefinition Height="15*" />
                -->

            </Grid.RowDefinitions>

            <Button ClassId = "SunButton" Text="Sunday" Grid.Column="0" BackgroundColor="#8FBC8F" Clicked="ClickedColor" />
            <Button ClassId = "MonButton" Text="Monday" Grid.Column="0" Grid.Row="1" Clicked="ClickedColor"/>
            <Button ClassId = "SkipButton" Text="Skip This Week" Grid.Column="1" Grid.RowSpan="2" Clicked="ClickedColor"/>
            <Button ClassId = "SelectButton" Text="Select Meal" Grid.Column="0" Grid.Row="2" Clicked="ClickedColor" BackgroundColor="#8FBC8F"/>
            <Button ClassId = "SurpriseButton" Text="Surprise Me" Grid.Column ="1" Grid.Row="2" Clicked="ClickedColor"/>
            <Button ClassId = "AddButton" Text="Add on" Grid.ColumnSpan="2" Grid.Row="3" Clicked="ClickedAddOn"/>
            <Button Text="Next" Grid.ColumnSpan="2" Grid.Row="4" Margin="10" Clicked="ClickedSelectMeal" />
