    <ContentPage.Content>

        <StackLayout>
            <Label Text="Date Placeholder" FontSize ="24" Margin="20" TextColor="Black" HorizontalOptions="Center"/>
            <Grid ColumnSpacing="8" HorizontalOptions="FillAndExpand"  x:Name="ButtonStack">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16.66*" />
                <ColumnDefinition Width="16.66*" />
