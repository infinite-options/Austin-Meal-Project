<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="InfiniteMeals.Meals.MealSchedule" Title="Select Meals Around Your Schedule">
    <ContentPage.Content>

        <StackLayout>
            <Label Text="Dates" FontSize ="24" Margin="20" TextColor="Black" HorizontalOptions="Center"/>
            <Grid x:Name="ButtonStack">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16.66*" />
                <ColumnDefinition Width="16.66*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
            </Grid.RowDefinitions>

            <Button ClassId = "SunButton"
                    Margin="30,0,0,0"
                    WidthRequest="150"
                    HeightRequest="150"
                    HorizontalOptions="Start"
                    Text="Sunday"
                    Grid.Column="0"
                    BackgroundColor="#8FBC8F"
                    Clicked="ClickedColor" />
            <Button ClassId = "MonButton"
                    Margin="30,0,0,0"
                    WidthRequest="150"
                    HeightRequest="150"
                    HorizontalOptions="Start"
                    Text="Monday"
                    Grid.Column="0"
                    Grid.Row="1"
                    Clicked="ClickedColor"/>
            <Button ClassId = "SkipButton"
                    Margin="0,0,30,0"
                    WidthRequest="150"
                    HeightRequest="150"
                    HorizontalOptions="End"
                    Text="Skip This Week"
                    Grid.Column="1"
                    Grid.Row="1"
                    Clicked="ClickedColor"/>
            <Button ClassId = "SelectButton"
                    Margin="30,0,0,0"
                    WidthRequest="150"
                    HorizontalOptions="Start"
                    HeightRequest="175"
                    VerticalOptions="Start"
                    Text="Select Meal"
                    Grid.Column="0"
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    Clicked="ClickedSelectMeal"/>
            <Button ClassId = "SurpriseButton"
                    Margin="0,0,30,0"
                    WidthRequest="150"
                    HeightRequest="150"
                    HorizontalOptions="End"
                    BackgroundColor="#8FBC8F"
                    Text="Surprise Me"
                    Grid.Column ="1"
                    Grid.Row="0"
                    Clicked="ClickedColor"/>
            <Button ClassId = "AddButton"
                    Margin="0,0,30,0"
                    WidthRequest="150"
                    HorizontalOptions="End"
                    HeightRequest="175"
                    VerticalOptions="Start"
                    Text="Add Local Treats"
                    Grid.Column="1"
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    Clicked="ClickedAddOnNav"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>