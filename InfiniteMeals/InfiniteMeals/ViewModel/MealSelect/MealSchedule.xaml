<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="InfiniteMeals.Meals.MealSchedule" Title="Select Meals Around Your Schedule">
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding SundayDates}">
            <Label Text="Dates" FontSize ="24" Margin="20" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Grid x:Name="ButtonStack"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">
               
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16.66*" />
                <ColumnDefinition Width="16.66*" />
                <ColumnDefinition Width="16.66*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
                <RowDefinition Height="16.66*" />
            </Grid.RowDefinitions>

            <Button ClassId = "SunButton"
                    x:Name="SundayButton"
                    WidthRequest="100"
                    HeightRequest="100"
                    BorderColor="Black"
                    BorderWidth="0.1"
                    Margin="30,0,0,0"
                    VerticalOptions="Start"
                    Text="Sunday&#x0a;Jun 7"
                    HorizontalOptions="Center"
                    Grid.Column="0"
                    Grid.Row="0"
                    BackgroundColor="#8FBC8F"
                    Clicked="ClickedColor" />
                    <!--
                    Text="{Binding sundayDate}"
                    -->

            <Button ClassId = "MonButton"
                    x:Name="MondayButton"
                    BackgroundColor="#F5F5F5"
                    BorderColor="Black"
                    BorderWidth="0.1"
                    WidthRequest="100"
                    HeightRequest="100"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Text="Monday&#x0a;Jun 8"
                    Grid.Column="1"
                    Grid.Row="0"
                    Clicked="ClickedColor"/>
            <Button ClassId = "SkipButton"
                    x:Name="SkipButton"
                    BackgroundColor="#F5F5F5"
                    BorderColor="Black"
                    WidthRequest="100"
                    HeightRequest="100"
                    BorderWidth="0.1"
                    Margin="0,0,30,0"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Text="Skip This Week"
                    Grid.Column="2"
                    Grid.Row="0"
                    Clicked="ClickedColor"/>
            <Button ClassId = "SelectButton"
                    x:Name="SelectButton"
                    WidthRequest="100"
                    HeightRequest="100"
                    BackgroundColor="#F5F5F5"
                    BorderColor="Black"
                    BorderWidth="0.1"
                    HorizontalOptions="Center"
                    Margin="30,0,0,0"
                    VerticalOptions="Start"
                    Text="Select Meal"
                    Grid.Column="0"
                    Grid.Row="1"
                    Clicked="ClickedSelectMeal"/>
            <Button ClassId = "SurpriseButton"
                    x:Name="SurpriseButton"
                    WidthRequest="100"
                    HeightRequest="100"
                    BorderColor="Black"
                    BorderWidth="0.1"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    BackgroundColor="#8FBC8F"
                    Text="Surprise Me"
                    Grid.Column ="1"
                    Grid.Row="1"
                    Clicked="ClickedColor"/>
            <Button ClassId = "AddButton"
                    x:Name="AddonButton"
                    WidthRequest="100"
                    HeightRequest="100"
                    Margin="0,0,30,0"
                    HorizontalOptions="Center"
                    BackgroundColor="#F5F5F5"
                    BorderColor="Black"
                    BorderWidth="0.1"
                    VerticalOptions="Start"
                    Text="Add Local Treats"
                    Grid.Column="2"
                    Grid.Row="1"
                    Clicked="ClickedAddOn"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>